<%
    const theme_colors = [
        {type: 'driving', status: '行駛'},
        {type: 'speeding', status: '超速'},
        {type: 'idle-speed', status: '怠速'},
        {type: 'parking', status: '停車'},
        {type: 'flameout', status: '熄火'},
        {type: 'lost', status: '失聯'}
    ]
%> 
<%- include('layout/header', {title: '行車'}) %>
    <div class="container py-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-bold">狀態顏色</h5>
                
                <div class="row mt-3">
                    <% theme_colors.forEach(element => { %>
                        <div class="col-6 mb-2 text-center">
                            <div class="rounded mx-auto bg-<%= element.type _%>" style="width: 44px; height: 44px;"></div>
                            <div class=""><%= element.status _%></div>
                            <div class="bg-light px-2 py-1 rounded">.bg-<%= element.type _%></div>
                        </div>
                    <% }) %>
                </div>
                <div class="row mt-3">
                    <% theme_colors.forEach(element => { %>
                        <div class="col-6 mb-2 text-center">
                            <div class="fs-4 fw-bold text-<%= element.type _%>"><%= element.status _%></div>
                            <div class="bg-light px-2 py-1 rounded">.text-<%= element.type _%></div>
                        </div>
                    <% }) %>
                </div>

                <div class="my-3 fw-bold">SVG ICON</div>
                <div class="row">
                    <% theme_colors.forEach(element => { %>
                        <div class="col-6 mb-2 text-center">
                            <div class="fs-4 fw-bold text-<%= element.type _%>">
                                <%- include('layout/car', {prefix: element.status[0]}) %> 
                            </div>
                            <div class="bg-light px-2 py-1 rounded">.text-<%= element.type _%></div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div> 
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
      </div>
<%- include('layout/footer') %>